<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/primary_margin"
              android:background="@drawable/shape_fill_black_rect"
              android:orientation="vertical">

    <TextView
        style="@style/PrimaryText.20sp"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginTop="@dimen/primary_margin"
        android:text="@string/weather_life_suggestion"
        android:textColor="@color/colorTextWhite_ff"/>

    <TextView
        android:id="@+id/tv_weather_comfort"
        style="@style/PrimaryText"
        android:layout_margin="@dimen/primary_margin"
        android:textColor="@color/colorTextWhite_ff"/>

    <TextView
        android:id="@+id/tv_weather_wash"
        style="@style/PrimaryText"
        android:layout_margin="@dimen/primary_margin"
        android:textColor="@color/colorTextWhite_ff"/>

    <TextView
        android:id="@+id/tv_weather_sport"
        style="@style/PrimaryText"
        android:layout_margin="@dimen/primary_margin"
        android:textColor="@color/colorTextWhite_ff"/>

</LinearLayout>